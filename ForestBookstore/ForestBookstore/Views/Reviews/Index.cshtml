@model IEnumerable<ForestBookstore.DataLayer.Models.Review>

@{
    ViewBag.Title = "Index";
}

@section scripts {
    <link href="@Url.Content("~/Content/Styles/shopping-cart.css")" rel="stylesheet" type="text/css" />
}

<h2>All reviews</h2>

<div class="shopping-cart">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Review Author")
            </th>
            <th>
                @Html.DisplayName("Book")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.PersonName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Name) by
                    @Html.DisplayFor(modelItem => item.Book.Author.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>