@using ForestBookstore.Models;
@model ShoppingCartBookViewModel

<h2>Shopping Cart</h2>
@section scripts {
    <link href="@Url.Content("~/Content/Styles/shopping-cart.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
}


@{
    if (this.Model.Books.Count == 0)
    {
        @:No books added in the Shopping Cart.
    }
    else
    {
        decimal total = 0;
        <div class=" shopping-cart">
            <table class="table">
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Count</th>
                    <th>Price</th>
                    <th></th>
                </tr>
                @foreach (var book in this.Model.Books)
                {
                    <tr>
                        <td>
                            @if (book.Book.Image != null)
                            {
                                <img alt="Book Cover" src="@Url.Content("/Books/BookImage?id=" + book.Book.Id)" />
                            }
                        </td>
                        <td>@book.Book.Name</td>
                        <td>@book.Count</td>
                        @{decimal currBookTotalPrice = book.Count * Math.Round(book.Book.Price, 2);}
                        <td>@currBookTotalPrice</td>
                        @{total += book.Count * Math.Round(book.Book.Price, 2);}
                        <td>@using (Html.BeginForm("Delete", "ShoppingCart"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", book.BookId)
                            <input class="btn btn-sm btn-warning"
                                   type="submit" value="Delete" />
                        }</td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Total Price: @total</td>
                    <td></td>
                </tr>
            </table>
            <input id="proceedBtn" class="btn btn-sm btn-warning"
                   type="submit" value="Proceed" onclick="hideIt()" />
        </div>
        
      }
}

<script type="text/javascript">
    function toShippingDetails() {
        document.getElementById("proceedBtn").parentNode.style.visibility = "hidden";
    }
</script>

