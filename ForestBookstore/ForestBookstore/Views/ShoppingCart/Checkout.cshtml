@model ForestBookstore.Models.ShipmentDetailsViewModel

<h2>Shipment Details</h2>

<h3>Please select your shipment details</h3>

@using (@Html.BeginForm("Summary", "ShoppingCart", FormMethod.Post))
{
    @Html.AntiForgeryToken()
        <dl>
            <dt>@Html.LabelFor(m => m.PersonName)</dt>
            <dd>@Html.TextBoxFor(m => m.PersonName, new { @Value = @Model.PersonName })
            @Html.ValidationMessageFor(model => model.PersonName)</dd>
            <dt>@Html.LabelFor(m => m.Address)</dt>
            <dd>@Html.TextBoxFor(m => m.Address, new { @Value = @Model.Address })
            @Html.ValidationMessageFor(model => model.Address)</dd>
            <dt>@Html.LabelFor(m => m.Town)</dt>
            <dd>@Html.TextBoxFor(m => m.Town, new { @Value = @Model.Town })
            @Html.ValidationMessageFor(model => model.Town)</dd>
            <dt>@Html.LabelFor(m => m.Phone)</dt>
            <dd>@Html.TextBoxFor(m => m.Phone, new { @Value = @Model.Phone })
            @Html.ValidationMessageFor(model => model.Phone)</dd>
        </dl>
        <input type="submit" class="btn btn-sm btn-warning" 
               value="To Summary" onclick="location.href='@Url.Action("Summary", "ShoppingCart")'"/>
}